{
  "name": "react-webpack-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A minimal boilerplate app featuring react, webpack, and typescript",
  "scripts": {
    "clean": "rm -rf ./build/",
    "prebuild": "npm run clean",
    "build": "webpack --bail && cp index.html ./build/",
    "typings:install": "typings install --save",
    "postinstall": "rm -rf typings && typings install",
    "start": "node server.js"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^2.2.1",
    "react-hot-loader": "^1.3.0",
    "typescript": "^2.0.2",
    "typings": "^1.3.3",
    "webpack": "^2.1.0-beta.21",
    "webpack-dev-server": "^2.1.0-beta.2"
  },
  "dependencies": {
    "react": "^15.3.1",
    "react-dom": "^15.3.1"
  }
}
